{
    "compilerOptions": {
      "allowSyntheticDefaultImports": false,
      "target": "es5",
      "module": "commonjs",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "strictNullChecks": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "lib": ["es2015", "es2016", "dom"],
      "rootDir": ".",
      "isolatedModules": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }